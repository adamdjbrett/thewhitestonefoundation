---
layout: base.njk
title: "People"
description: "Meet the dedicated team and scholars behind The Whitestone Foundation and our publications."
permalink: /people/
---
<section class="container">
    <div class="row g-5 mb-5 pt-4 align-items-center">
        <h1 class="col-md-4 display-5 fw-bold" style="font-family: 'Tenor Sans', serif;">{{ title }}</h1>
        <div class="col-md-8 lead">
            <p class="mb-0">
                {{ description }}
            </p>
        </div>
    </div>
    <hr/>

    <div class="row g-5 mt-2">
        {% for member in team.active %}
        <div class="col-md-6 col-lg-3">
            <article class="article-card h-100">
                <div class="img-container mb-3" style="aspect-ratio: 1/1; overflow: hidden; background: #f8f9fa;">
                    <img src="{{ member.photo or metadata.image }}" 
                         alt="{{ member.name }}" 
                         class="img-fluid w-100 h-100" 
                         style="object-fit: cover;"
                         loading="lazy">
                </div>
                
                <div class="article-meta">
                    <span class="text-uppercase small fw-bold" style="color: var(--accent); letter-spacing: 1px;">
                        {{ member.role }}
                    </span>
                </div>

                <h3 class="mt-2 h5 fw-bold">{{ member.name }}</h3>
                
                <div class="text-secondary small member-bio">
                    {{ member.description | stripHtml | truncate(200) }}
                </div>
            </article>
        </div>
        {% endfor %}
    </div>

    {% if team.alumni %}
    <div class="row g-5 mt-5 pt-4 border-top">
        <div class="col-12">
            <h2 class="display-6 fw-bold mb-4" style="font-family: 'Tenor Sans', serif;">Alumni</h2>
        </div>
        
        {% for member in team.alumni %}
        <div class="col-md-6 col-lg-4">
            <div class="d-flex align-items-start gap-3 mb-4">
                <img src="{{ member.photo or metadata.image }}" 
                     alt="{{ member.name }}" 
                     class="rounded-circle shadow-sm" 
                     width="64" height="64" 
                     style="object-fit: cover; flex-shrink: 0;">
                <div>
                    <h4 class="h6 fw-bold mb-1">{{ member.name }}</h4>
                    <p class="text-secondary small mb-0">
                        {{ member.description | stripHtml | truncate(120) }}
                    </p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% endif %}
</section>
---
layout: base.njk
title: "Higher Ed"
pagination:
  data: collections.higherEd
  size: 6
  alias: posts
eleventyComputed:
  permalink: "higher-ed/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber + 1 }}/{% endif %}index.html"
---

<section class="container">
  <div class="row g-5 mt-4 border-bottom pt-4">
    <h1 class="col-md-4 display-5 fw-bold" style="font-family: 'Tenor Sans', serif;">{{ title }}</h1>
    <div class="col-md-8 lead">
      <a href="/" class="btn btn-dark rounded-0 btn-sm float-end mt-1">Back Home</a>
      <p>Rethinking Higher Education Totally… Exploring the future of academic institutions and rethinkings educational structures.</p>
    </div>
  </div>
  <div class="row g-5 mt-2">
    {% for p in posts %}
    <div class="col-md-6 col-lg-4">
      <a href="{{ p.url }}" class="article-card text-decoration-none color-inherit">
        <div class="img-container mb-3">
          <img src="{{ p.data.image or metadata.image }}" 
          alt="{{ p.data.title }}" class="img-fluid">
        </div>
        <div class="article-meta mb-2">
          <span class="text-uppercase small fw-bold" style="color: var(--accent);">
            {{ p.data.categories[0] if p.data.categories else "Higher Ed" }} 
            • {{ p.date | readableDate }}
          </span>
        </div>
        <h3 class="h4">{{ p.data.title }}</h3>
        <p class="text-secondary small">
          {{ p.data.description or p.content | stripHtml | truncate(150) }}
        </p>
      </a>
    </div>
    {% else %}
    <div class="col-12 text-center py-5">
      <p class="lead text-muted">No posts found yet.</p>
    </div>
    {% endfor %}
  </div>
  {% if pagination.pages.length > 1 %}
  <nav class="row mt-5 border-top pt-4 mb-5">
    <div class="col-12 d-flex justify-content-between align-items-center">
      {% if pagination.href.previous %}
        <a href="{{ pagination.href.previous }}" class="btn btn-outline-dark btn-sm rounded-0">← Newer</a>
      {% else %}
        <span class="text-muted small text-uppercase">Start</span>
      {% endif %}

      <div class="d-none d-md-flex gap-3">
        {% for pageHref in pagination.hrefs %}
          <a href="{{ pageHref }}" class="text-decoration-none small {{ 'fw-bold text-dark' if pagination.pageNumber == loop.index0 else 'text-muted' }}">
            {{ loop.index }}
          </a>
        {% endfor %}
      </div>

      {% if pagination.href.next %}
        <a href="{{ pagination.href.next }}" class="btn btn-outline-dark btn-sm rounded-0">Older →</a>
      {% else %}
        <span class="text-muted small text-uppercase">End</span>
      {% endif %}
    </div>
  </nav>
  {% endif %}
</section>